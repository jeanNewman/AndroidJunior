<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".settings.SettingsActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center_vertical"
       android:orientation="horizontal"
       >
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="16dp"
           android:src="@drawable/baseline_dark_mode_24"
           app:tint="@color/settings_text_title"
           >

       </ImageView>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/settings_text_title"
               android:text="Dark Mode"
               android:textStyle="bold"
                android:textSize="14sp"
               >
               
           </TextView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Enable Dark Mode"
               android:textSize="11sp"
               android:textStyle="bold"
               >

           </TextView>

       </LinearLayout>
       <com.google.android.material.switchmaterial.SwitchMaterial
           android:id="@+id/switchDarkMode"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="16dp"
           >

       </com.google.android.material.switchmaterial.SwitchMaterial>
   </LinearLayout>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/baseline_bluetooth_24"

            app:tint="@color/settings_text_title">

        </ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/settings_text_title"
                android:text="Bluetooth"
                android:textStyle="bold"
                >

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable Bluetooth"
                android:textSize="11sp"
                >

            </TextView>

        </LinearLayout>
       <com.google.android.material.switchmaterial.SwitchMaterial
           android:id="@+id/switchBlueTooth"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="16dp"
           >

       </com.google.android.material.switchmaterial.SwitchMaterial>
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        >

    </com.google.android.material.divider.MaterialDivider>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/baseline_volume_up_24"
            app:tint="@color/settings_text_title"
            >

        </ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/settings_text_title"
                android:text="Volumen"
                android:textStyle="bold"
                >

            </TextView>
          <com.google.android.material.slider.RangeSlider
              android:id="@+id/rangeSlider"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:valueFrom="0"
              android:valueTo="100"
              android:stepSize="1"
              >

          </com.google.android.material.slider.RangeSlider>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/baseline_vibration_24"
            app:tint="@color/settings_text_title"
            >

        </ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/settings_text_title"
                android:text="Call Vibrations"
                android:textStyle="bold"
                >

            </TextView>


        </LinearLayout>
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchVibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            >

        </com.google.android.material.switchmaterial.SwitchMaterial>
    </LinearLayout>
</LinearLayout>